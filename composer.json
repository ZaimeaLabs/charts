{
    "name": "zaimea/charts",
    "license": "MIT",
    "homepage": "https://zaimea.com/",
    "description": "Charts is a Laravel package that provides a simple, elegant integration of ApexCharts into your Laravel applications.",
    "keywords": [
        "charts",
        "laravel",
        "livewire",
        "apexcharts",
        "zaimea",
        "zaimealabs"
    ],
    "authors": [
        {
            "name": "Custură Laurențiu",
            "email": "mail@custura.de"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "livewire/livewire": "3.6.4",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpstan/phpstan": "^1.12.23",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Zaimea\\Charts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zaimea\\Charts\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "laravel": {
            "providers": [
                "Zaimea\\Charts\\ChartsServiceProvider"
            ],
            "aliases": {
                "Charts": "Zaimea\\Charts\\Facades\\Charts"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
